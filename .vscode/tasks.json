{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "deno run",
      "command": "deno run --allow-net --allow-read --config tsconfig.json Server.ts",
      "type": "shell",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "deno test",
      "command": "deno test --failfast",
      "type": "shell",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "docker-compose up",
      "command": "docker-compose up -d",
      "type": "shell",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "docker-compose build",
      "command": "docker-compose build",
      "type": "shell",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "docker-compose down",
      "command": "docker-compose down",
      "type": "shell",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    }
  ]
}
